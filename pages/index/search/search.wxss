@import "/pages/template/result/result.wxss";
@import "/pages/template/hothis/hothis.wxss";

.search-pancel {
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  margin-right: 10px;
  padding-top: 8px;
  padding-bottom: 4px;
}

.icon-clear {
  position: absolute;
  right: 68px;
  top: 15px;
}

.search-input {
  flex: 10;
  background-color: #eee;
  border-radius: 50px;
  padding: 5px 35px 5px 15px;
}

.search-button {
  font-family: '幼圆';
  flex: 2;
  text-align: center;
  line-height: 72.5rpx;
  font-weight: bold;
  color: #000;
  font-size: 36rpx;
}

.error{
  display: flex;
  flex-direction: column;
  margin: 150rpx auto 20rpx 178rpx;
}

.errorimg{
  width: 394rpx;
  height: 490rpx;
  background: lightgrew;
}

.errortext{
  margin-top: 40rpx;
  margin-left: 40rpx;
}
